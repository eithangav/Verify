<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DummySearchFragment">

    <include layout="@layout/fragment_base" />

    <ImageView
        android:layout_width="289dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_dummy_search_header_text" />


    <RelativeLayout
        android:id="@+id/dummy_button"
        android:layout_width="274dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:padding="2dp"
        android:background="@drawable/edit_text_background_round"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_background_round">

            <RelativeLayout
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_search_white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_search_button_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="343dp"
        android:layout_height="338dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="217dp"
        android:src="@drawable/ic_dummy_search_drawing" />



</RelativeLayout>