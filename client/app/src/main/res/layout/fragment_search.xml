<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SearchFragment">

    <include layout="@layout/fragment_base" />

    <ImageView
        android:layout_width="289dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_dummy_search_header_text" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:layout_marginStart="304dp"
        android:src="@drawable/ic_location_pin_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:text="@string/full_address_hint"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="217dp"
        android:layout_marginStart="319dp"
        android:text="@string/city_field_title"
        android:textColor="@color/black"
        android:labelFor="@id/city_field"/>

    <EditText
        android:id="@+id/city_field"
        android:layout_width="277dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:layout_marginStart="64dp"
        android:gravity="start"
        android:background="@drawable/edit_text_background"
        android:elevation="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:autofillHints=""
        android:textColor="@color/black"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="303dp"
        android:layout_marginStart="312dp"
        android:text="@string/street_field_title"
        android:textColor="@color/black"
        android:labelFor="@id/street_field"/>

    <EditText
        android:id="@+id/street_field"
        android:layout_width="277dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="326dp"
        android:layout_marginStart="64dp"
        android:gravity="start"
        android:background="@drawable/edit_text_background"
        android:elevation="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:autofillHints=""
        android:textColor="@color/black"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="391dp"
        android:layout_marginStart="318dp"
        android:text="@string/building_field_title"
        android:textColor="@color/black"
        android:labelFor="@id/building_field"/>

    <EditText
        android:id="@+id/building_field"
        android:layout_width="68.72dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="416dp"
        android:layout_marginStart="267dp"
        android:gravity="start"
        android:background="@drawable/edit_text_background"
        android:elevation="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:autofillHints=""
        android:textColor="@color/black"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="391dp"
        android:layout_marginStart="209dp"
        android:text="@string/floor_field_title"
        android:textColor="@color/black"
        android:labelFor="@id/floor_field"/>

    <EditText
        android:id="@+id/floor_field"
        android:layout_width="68.72dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="416dp"
        android:layout_marginStart="166dp"
        android:gravity="start"
        android:background="@drawable/edit_text_background"
        android:elevation="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:autofillHints=""
        android:textColor="@color/black"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="391dp"
        android:layout_marginStart="109dp"
        android:text="@string/apartment_field_title"
        android:textColor="@color/black"
        android:labelFor="@id/apartment_field"/>

    <EditText
        android:id="@+id/apartment_field"
        android:layout_width="68.72dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="416dp"
        android:layout_marginStart="64dp"
        android:gravity="start"
        android:background="@drawable/edit_text_background"
        android:elevation="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:autofillHints=""
        android:textColor="@color/black"
        android:inputType="number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_search_button"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="501dp"
        android:background="@drawable/button_background_1"
        android:text="@string/search_button_text"
        android:textColor="@color/white"
        android:elevation="10dp" />




</RelativeLayout>