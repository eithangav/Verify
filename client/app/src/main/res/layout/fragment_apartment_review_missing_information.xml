<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.ApartmentReviewBottomLineFragment">>

    <View
        android:id="@+id/question_mark_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:background="@drawable/ic_question_mark_outline_in_a_circle"
        />

    <TextView
        android:id="@+id/missing_information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/question_mark_icon"
        android:layout_marginTop="28dp"
        android:layout_marginRight="8dp"
        android:gravity="right|top"
        android:text="@string/missing_information_title"
        android:textAppearance="@style/apartment_review_opinion_bold_titles" />

    <View
        android:id="@+id/right_vote_rectangle"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_below="@+id/missing_information_title"
        android:layout_alignEnd="@+id/missing_information_title"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_rectangle_yes_or_no" />

    <TextView
        android:id="@+id/right_vote_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/right_vote_rectangle"
        android:layout_alignRight="@id/right_vote_rectangle"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:text="כן"
        android:textSize="12sp"
        android:textAppearance="@style/apartment_review_opinion_bold_titles"
        android:gravity="right|top"
        />

    <View
        android:id="@+id/left_vote_rectangle"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_below="@id/missing_information_title"
        android:layout_alignEnd="@+id/red_circle"
        android:layout_toLeftOf="@id/right_vote_rectangle"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_rectangle_yes_or_no" />

    <TextView
        android:id="@+id/left_votes_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/left_vote_rectangle"
        android:layout_alignRight="@id/left_vote_rectangle"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:text="לא"
        android:textSize="12sp"
        android:textAppearance="@style/apartment_review_opinion_bold_titles"
        android:gravity="right|top"
        />

</RelativeLayout>