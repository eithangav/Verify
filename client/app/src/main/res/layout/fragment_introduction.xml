<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.IntroductionFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/introduction_fragment_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="@string/introduction_layout_skip_text" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/introduction_view_pager"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="510dp" />

    <LinearLayout
        android:id="@+id/introduction_dots_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introduction_view_pager"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|top"
        android:orientation="horizontal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lets_verify_button"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:layout_below="@+id/introduction_view_pager"
        android:layout_marginTop="50dp"
        android:elevation="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/button_background_2"
        android:text="@string/introduction_layout_button_text"
        android:textAppearance="@style/introduction_layout_button_text"
        android:orientation="horizontal"
        android:textFontWeight="500" />

</RelativeLayout>